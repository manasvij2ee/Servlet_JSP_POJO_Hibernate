<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
  <display-name>User Registration</display-name>
  
   <welcome-file-list>
    <welcome-file>loginPage.jsp</welcome-file>   
   </welcome-file-list> 
 
  <servlet>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <servlet-class>com.home.client.UserRegistrationServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ViewUserRegistration</servlet-name>
    <servlet-class>com.home.client.ViewUserRegistration</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ViewUserRegistration</servlet-name>
    <url-pattern>/viewRegister.do</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <url-pattern>/registerUser.do</url-pattern>
  </servlet-mapping>
    
</web-app>  