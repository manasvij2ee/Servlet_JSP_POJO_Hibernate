<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>User Registration</display-name>
  
   <welcome-file-list>
    <welcome-file>loginPage.jsp</welcome-file>   
   </welcome-file-list> 
 
  <servlet>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <servlet-class>com.home.UserRegistrationServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ViewUserRegistration</servlet-name>
    <servlet-class>com.home.ViewUserRegistration</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ViewUserRegistration</servlet-name>
    <url-pattern>/viewRegister.do</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <url-pattern>/registerUser.do</url-pattern>
  </servlet-mapping>
    
</web-app>  